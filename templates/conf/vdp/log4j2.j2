<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <Properties>
      <Property name="vdp.instance.log" />
    </Properties>

  <Appenders>

    <RollingFile name="FILEOUT" fileName="{{ solution_manager_installer_vars.install_path }}/logs/vdp/vdp${env:vdp.instance.log}.log" filePattern="{{ solution_manager_installer_vars.install_path }}/logs/vdp/vdp${env:vdp.instance.log}.log.%i">
      <Policies>
    <SizeBasedTriggeringPolicy size="10 MB" />
      </Policies>
      <DefaultRolloverStrategy max="7" />
      <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c %x - %m  %n" />
    </RollingFile>

    <RollingFile name="REQUESTOUT" fileName="{{ solution_manager_installer_vars.install_path }}/logs/vdp/vdp-requests${env:vdp.instance.log}.log" filePattern="{{ solution_manager_installer_vars.install_path }}/logs/vdp/vdp-requests${env:vdp.instance.log}.log.%i">
      <Policies>
    <SizeBasedTriggeringPolicy size="10 MB" />
      </Policies>
      <DefaultRolloverStrategy max="7" />
      <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c %x - %m  %n" />
    </RollingFile>

    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c %x - %m  %n" />
    </Console>

    <RollingFile name="CACHEOUT" fileName="{{ solution_manager_installer_vars.install_path }}/logs/vdp/vdp-cache${env:vdp.instance.log}.log" filePattern="{{ solution_manager_installer_vars.install_path }}/logs/vdp/vdp-cache${env:vdp.instance.log}.log.%i">
      <Policies>
    <SizeBasedTriggeringPolicy size="10 MB" />
      </Policies>
      <DefaultRolloverStrategy max="7" />
      <PatternLayout pattern="%-4r [%t] %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %x -\t%m  %n" />
    </RollingFile>

    <RollingFile name="QUERIESOUT" fileName="{{ solution_manager_installer_vars.install_path }}/logs/vdp/vdp-queries${env:vdp.instance.log}.log" filePattern="{{ solution_manager_installer_vars.install_path }}/logs/vdp/vdp-queries${env:vdp.instance.log}.log.%i">
      <Policies>
    <SizeBasedTriggeringPolicy size="10 MB" />
      </Policies>
      <DefaultRolloverStrategy max="7" />
      <PatternLayout pattern="%-4r [%t] %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %x -\t%m  %n" />
    </RollingFile>

  </Appenders>

  <Loggers>

    <Logger name="com.denodo" level="error" />

    <Logger name="com.denodo.vdp.resourcemanager" level="error" />

    <Logger name="com.denodo.solutionmanager" level="error" />

    <Logger name="com.denodo.tomcat" level="info" />

    <Logger name="org.apache.commons.betwixt" level="error" />

    <Logger name="org.apache.commons" level="error" />

    <Logger name="org.enhydra.jdbc.xapool" level="fatal" />

    <Logger name="com.google.api.client.http.HttpTransport" level="fatal" />

    <Logger name="com.microsoft.tfs" level="error" />

    <Logger name="com.denodo.vdp.derby" level="error" />

    <Logger name="com.denodo.vdp.requests" level="error" additivity="false">
      <AppenderRef ref="REQUESTOUT" />
    </Logger>

    <Logger name="com.denodo.vdb.engine.ResultCache" level="error" additivity="false">
      <AppenderRef ref="CACHEOUT" />
    </Logger>

    <Logger name="com.denodo.vdb.management.mbeans.request.RequestsManagementInfo" level="error" additivity="false">
      <AppenderRef ref="QUERIESOUT" />
    </Logger>

    <Root level="error">
      <AppenderRef ref="FILEOUT" />
    </Root>

  </Loggers>

</Configuration>

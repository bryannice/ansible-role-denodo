<?xml version="1.0" encoding="UTF-8"?>

<Configuration>

    <Appenders>

        <RollingFile name="DBTOOLSOUT" fileName="{{ solution_manager_installer_vars.install_path }}/logs/db-tools.log" filePattern="{{ solution_manager_installer_vars.install_path }}/logs/db-tools.log.%i">
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="7" />
            <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c %x - %m  %n" />
        </RollingFile>
        <RollingFile name="REQUESTOUT" fileName="{{ solution_manager_installer_vars.install_path }}/logs/vdp-requests.log" filePattern="{{ solution_manager_installer_vars.install_path }}/logs/vdp-requests.log.%i">
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="7" />
            <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c %x - %m  %n" />
        </RollingFile>

        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c %x - %m  %n" />
        </Console>

    </Appenders>

    <Loggers>
        <Logger name="com.denodo.vdb.vdbinterface.client.tools.QueryLogger" level="INFO" additivity="false">
            <AppenderRef ref="REQUESTOUT" />
        </Logger>

        <Root level="ERROR">
            <AppenderRef ref="DBTOOLSOUT" />
        </Root>

    </Loggers>

</Configuration>

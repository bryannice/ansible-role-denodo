<?xml version="1.0" encoding="UTF-8"?>

<Configuration>

    <Appenders>

        <RollingFile name="FILEOUT" fileName="{{ solution_manager_installer.install_path }}/logs/launcher/denodo-launcher.log" filePattern="{{ solution_manager_installer.install_path }}/logs/launcher/denodo-launcher.log.%i">
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="7" />
            <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c %x - %m  %n" />
        </RollingFile>

        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c %x - %m  %n" />
        </Console>

    </Appenders>

    <Loggers>

        <Logger name="com.denodo" level="ERROR" />
        <Logger name="org.apache.commons.betwixt" level="ERROR" />
        <Logger name="org.apache.commons.digester" level="ERROR" />
        <Logger name="org.apache.commons.beanutils" level="ERROR" />
        <Root level="ERROR">
            <AppenderRef ref="FILEOUT" />
        </Root>

    </Loggers>

</Configuration>

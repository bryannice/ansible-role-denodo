<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

  <Appenders>

    <RollingFile name="FILEOUT" fileName="{{ solution_manager_installer_vars.install_path }}/logs/license-manager/license-manager.log"
        filePattern="{{ solution_manager_installer_vars.install_path }}/logs/license-manager/license-manager%d{yyyy-MM-dd}.%i.log">
      <Policies>
        <SizeBasedTriggeringPolicy size="10 MB" />
      </Policies>
      <DefaultRolloverStrategy max="7" />
      <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c %x - %m  %n" />
    </RollingFile>

  </Appenders>

  <Loggers>

    <logger name="com.denodo.licensemanager" level="ERROR" />
    <logger name="com.denodo.solutionmanager" level="ERROR" />
    <logger name="org.springframework" level="ERROR" />

    <root level="error">
        <appender-ref ref="FILEOUT" />
    </root>

  </Loggers>

</Configuration>

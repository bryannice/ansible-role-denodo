<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

  <Appenders>

    <RollingFile name="FILEOUT" fileName="{{ solution_manager_installer_vars.install_path }}/logs/solution-manager/solution-manager.log"
        filePattern="{{ solution_manager_installer_vars.install_path }}/logs/solution-manager/solution-manager%d{yyyy-MM-dd}.%i.log">
      <Policies>
        <SizeBasedTriggeringPolicy size="10 MB" />
      </Policies>
      <DefaultRolloverStrategy max="7" />
      <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c %x - %m  %n" />
    </RollingFile>

  </Appenders>

  <Loggers>

    <Root level="error" >
      <AppenderRef ref="FILEOUT" />
    </Root>
    <logger name="com.denodo.solutionmanager" level="ERROR"  />
    <logger name="org.springframework" level="ERROR" />
  </Loggers>

</Configuration>

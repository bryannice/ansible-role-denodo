<?xml version="1.0" encoding="UTF-8"?>

<Configuration>

    <Appenders>
        <RollingFile name="FILEOUT" fileName="{{ solution_manager_installer_vars.install_path }}/logs/vdp-admin/vdp-admin.log" filePattern="{{ solution_manager_installer_vars.install_path }}/logs/vdp-admin/vdp-admin.log.%i">
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
            <DefaultRolloverStrategy max="7" />
            <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c %x - %m  %n" />
        </RollingFile>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="%-4r [%t] %-5p %d{yyyy-MM-dd'T'HH:mm:ss.SSS} %c %x - %m  %n" />
        </Console>
    </Appenders>

    <Loggers>
        <Logger name="com.denodo" level="ERROR" />
        <Root level="ERROR">
            <AppenderRef ref="FILEOUT" />
        </Root>
    </Loggers>

</Configuration>
